<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">

        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->

        <!-- TextViews -->
        <item name="android:textViewStyle">@style/SWAPITextView</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <!-- TextView Style -->
    <style name="SWAPITextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_m</item>
        <item name="android:textColorLink">@color/sky</item>
        <item name="android:gravity">left</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>
